    global m_lu
    global m_ru
    global m_rd
    global m_ld

    # rovně
    # run_m (1 * rych, 1 * rych, -1 * rych, -1 * rych)

    # doleva
    # run_m (-1 * rych, 1 * rych, 1 * rych, -1 * rych)

    # dozadu
    # run_m (-1 * rych, -1 * rych, 1 * rych, 1 * rych)

    # doprava
    # run_m (1 * rych, -1 * rych, -1 * rych, 1 * rych)




# setup kostka, stopky
ev3 = EV3Brick()

# setup motory 
m_lu = Motor(Port.A)
m_ru = Motor(Port.C)
m_rd = Motor(Port.B)
m_ld = Motor(Port.D)
